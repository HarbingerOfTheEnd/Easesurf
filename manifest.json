{
    "manifest_version": 3,
    "name": "EaseSurf",
    "version": "1.0",
    "description": "Make your browsing experience easier",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["activeTab"]
}
